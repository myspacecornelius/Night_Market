# =============================================================================
# DHARMA ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values for your environment
# This file contains all the secrets and configuration needed to run Dharma

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=dharma
POSTGRES_PASSWORD=dharma_dev_password_change_in_production
POSTGRES_DB=dharma
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full database URL for SQLAlchemy (constructed from above values)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
FRONTEND_PORT=5173

# JWT Secret for authentication (generate a secure random string in production)
JWT_SECRET_KEY=dharma_jwt_secret_key_change_in_production_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# EXTERNAL SERVICES (Optional - for advanced features)
# =============================================================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=dharma-uploads

# Gemini AI API (for AI-powered features)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Dharma
VITE_APP_DESCRIPTION="The Underground Network for Sneaker Culture"

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# DEMO DATA SETTINGS
# =============================================================================
# Set to true to automatically seed demo data on first run
AUTO_SEED_DATA=true

# Number of demo users to create
DEMO_USERS_COUNT=50

# Number of demo posts to create
DEMO_POSTS_COUNT=200

# Number of demo releases to create
DEMO_RELEASES_COUNT=10
